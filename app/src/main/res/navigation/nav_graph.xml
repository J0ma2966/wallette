<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/statistics">

    <fragment
        android:id="@+id/singleTransactionFragment"
        android:name="com.example.feature_statistics_impl.presentation.screen.singleTransaction.SingleTransactionFragment"
        android:label="@string/single_transaction_fragment_name"
        tools:layout="@layout/fragment_single_transaction" />
    <navigation
        android:id="@+id/statistics"
        app:startDestination="@id/statisticsFragment">
        <fragment
            android:id="@+id/statisticsFragment"
            android:name="com.example.feature_statistics_impl.presentation.screen.statistics.StatisticsFragment"
            android:label="@string/statistics_fragment_name"
            tools:layout="@layout/fragment_statistics" >
            <action
                android:id="@+id/action_statisticsFragment_to_transactionsFragment"
                app:destination="@id/transactionsFragment" />
        </fragment>
        <fragment
            android:id="@+id/transactionsFragment"
            android:name="com.example.feature_statistics_impl.presentation.screen.transactionsList.TransactionsFragment"
            android:label="@string/transactions_fragment_name"
            tools:layout="@layout/fragment_transactions_list" />
    </navigation>
    <navigation
        android:id="@+id/authorization"
        app:startDestination="@id/loginFragment">
        <fragment
            android:id="@+id/loginFragment"
            android:name="com.example.feature_auth.presentation.screen.login.LoginFragment"
            android:label="@string/login_fragment_name"
            tools:layout="@layout/fragment_login" >
            <action
                android:id="@+id/action_loginFragment_to_registerFragment"
                app:destination="@id/registerFragment" />
        </fragment>
        <fragment
            android:id="@+id/registerFragment"
            android:name="com.example.feature_auth.presentation.screen.register.RegisterFragment"
            android:label="@string/register_fragment_name"
            tools:layout="@layout/fragment_register" >
            <action
                android:id="@+id/action_registerFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
        </fragment>
    </navigation>
    <navigation
        android:id="@+id/settings"
        app:startDestination="@id/settingsFragment">
        <fragment
            android:id="@+id/singleTagFragment"
            android:name="com.example.feature_settings.presentation.screen.singleTag.SingleTagFragment"
            android:label="@string/single_tag_fragment_name"
            tools:layout="@layout/fragment_single_tag" />
        <fragment
            android:id="@+id/accountsFragment"
            android:name="com.example.feature_settings.presentation.screen.accounts.AccountsFragment"
            android:label="@string/accounts_fragment_name"
            tools:layout="@layout/fragment_accounts" >
            <action
                android:id="@+id/action_accountsFragment_to_singleAccountFragment"
                app:destination="@id/singleAccountFragment" />
        </fragment>
        <fragment
            android:id="@+id/singleAccountFragment"
            android:name="com.example.feature_settings.presentation.screen.singleAccount.SingleAccountFragment"
            android:label="@string/single_account_fragment_name"
            tools:layout="@layout/fragment_single_account" />
        <fragment
            android:id="@+id/settingsFragment"
            android:name="com.example.feature_settings.presentation.screen.settings.SettingsFragment"
            android:label="@string/settings_fragment_name"
            tools:layout="@layout/fragment_settings" >
            <action
                android:id="@+id/action_settingsFragment_to_tagsFragment"
                app:destination="@id/tagsFragment" />
            <action
                android:id="@+id/action_settingsFragment_to_categoriesFragment"
                app:destination="@id/categoriesFragment" />
            <action
                android:id="@+id/action_settingsFragment_to_accountsFragment"
                app:destination="@id/accountsFragment" />
        </fragment>
        <fragment
            android:id="@+id/singleCategoryFragment"
            android:name="com.example.feature_settings.presentation.screen.singleCategory.SingleCategoryFragment"
            android:label="@string/single_category_fragment_name"
            tools:layout="@layout/fragment_single_category" />
        <fragment
            android:id="@+id/categoriesFragment"
            android:name="com.example.feature_settings.presentation.screen.categories.CategoriesFragment"
            android:label="@string/categories_fragment_name"
            tools:layout="@layout/fragment_categories" >
            <action
                android:id="@+id/action_categoriesFragment_to_singleCategoryFragment"
                app:destination="@id/singleCategoryFragment" />
        </fragment>
        <fragment
            android:id="@+id/tagsFragment"
            android:name="com.example.feature_settings.presentation.screen.tags.TagsFragment"
            android:label="@string/tags_fragment_name"
            tools:layout="@layout/fragment_tags" >
            <action
                android:id="@+id/action_tagsFragment_to_singleTagFragment"
                app:destination="@id/singleTagFragment" />
        </fragment>
    </navigation>
</navigation>